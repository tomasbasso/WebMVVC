@{
    ViewData["Title"] = "Lista de Categorias";
}
<div class= "contaier mt-4">
    <div class="row">  
        <div class=" col-8">
            <h2 class=" text-primary">Lista de Categoria</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Crear Nueva Categoria</a>
        </div>
    </div>

    <br />
    <br />

    <table id="tbCategorias" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Habiitada</th>
                <th>Operaciones</th>
            </tr>
        </thead>
    </table>

</div>

@section Scripts {
    <script src="~/js/categoria.js"></script>
}